{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es2021",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "src/*": ["./*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src", "config","src/types", "src/types.d.ts", "src/drizzle.config.ts"],
  "exclude": ["node_modules", "dist", "**/*spec.ts"]
}